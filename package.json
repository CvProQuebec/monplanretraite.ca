    "firebase": "^12.1.0",
    "framer-motion": "^12.23.12",
    "gray-matter": "^4.0.3",
    "html2canvas": "^1.4.1",
    "js-yaml": "^4.1.0",
    "jspdf": "^3.0.2",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.263.1",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
