{
  "name": "monplanretraite.ca",
  "version": "1.0.0",
  "description": "Planification financiÃ¨re et de retraite intelligente pour les Canadiens",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/assets",
    "build:report": "npm run build -- --reportCompressedSize",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:boundaries": "eslint -c .eslint-boundaries.cjs .",
    "lint:mpr": "node scripts/check-mpr-forms.mjs",
    "deps:check": "node scripts/check-dependencies.mjs",
    "deps:graph": "node scripts/deps-graph.mjs",
    "audit:nav": "node scripts/audit-nav-runner.cjs",
    "audit:tools": "node scripts/audit-tools-runner.cjs",
    "fix:tools": "node scripts/generate-missing-tool-routes-runner.cjs",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:emergency": "jest src/lib/fileCrypto.test.ts src/utils/redaction.test.ts",
    "test:performance": "jest --testPathPattern=performance-seniors",
    "test:coverage": "jest --coverage",
    "test:routes": "jest src/routes/__tests__/routes-smoke.test.tsx",
    "ci:verify": "npm run qa:all",
    "lighthouse": "lhci autorun",
    "performance:audit": "npm run build:analyze && npm run test:performance",
    "testsprite:server": "powershell -NoProfile -Command \"$env:API_KEY=$env:testsprite; npx --yes @testsprite/testsprite-mcp@latest\"",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:vitest": "vitest --run",
    "test:vitest:watch": "vitest",
    "test:e2e": "playwright test --config tests/e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test --config tests/e2e/playwright.config.ts --ui",
    "test:a11y": "playwright test tests/e2e/accessibility.spec.ts --config tests/e2e/playwright.config.ts",
    "test:perf": "node tests/perf/run-k6.mjs",
    "test:security:zap": "node tests/security/run-zap-baseline.mjs",
    "test:security:audit": "npm audit --json > reports/latest-npm-audit.json && npm audit",
    "qa:smoke": "npm run test:routes",
    "qa:all": "npm run typecheck && npm run lint:boundaries && npm run lint:mpr && npm run deps:check && npm run test:unit && npm run test:vitest && npm run test:e2e"
  },
