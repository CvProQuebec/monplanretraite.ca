# Mode développement local - DÉSACTIVE Firebase pour les tests
VITE_DISABLE_FIREBASE=true

# Variables Firebase (optionnelles en mode local)
# VITE_FIREBASE_API_KEY=
# VITE_FIREBASE_AUTH_DOMAIN=
# VITE_FIREBASE_PROJECT_ID=
# VITE_FIREBASE_STORAGE_BUCKET=
# VITE_FIREBASE_MESSAGING_SENDER_ID=
# VITE_FIREBASE_APP_ID=

# Afficher les routes placeholder en dev (false par défaut)
# En production (Netlify), définir VITE_SHOW_PLACEHOLDERS=false
VITE_SHOW_PLACEHOLDERS=false

# Activer les pages de laboratoire/démo (exclues du bundle par défaut)
# true pour activer /labs/* en local; false en prod
VITE_ENABLE_LABS=false
